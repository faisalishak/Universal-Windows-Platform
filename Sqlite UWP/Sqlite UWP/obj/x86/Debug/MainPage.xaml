<Page
    x:Class="Sqlite_UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Sqlite_UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <RelativePanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 0 20">
                <TextBlock x:ConnectionId='5' Name="Name" Text="Name" Margin="10 0 10 0"></TextBlock>
                <TextBox x:ConnectionId='6'  Name="IName" Width="250" Height="10" RelativePanel.RightOf="Name"></TextBox>
            </RelativePanel>
            <RelativePanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock x:ConnectionId='3' Name="Kelas" Text="Kelas" Margin="10 0 10 0"></TextBlock>
                <TextBox x:ConnectionId='4' Name="IKelas" Width="250" Height="10" RelativePanel.RightOf="Kelas"></TextBox>
            </RelativePanel>
            <Button x:ConnectionId='1' Name="BSubmit" Content="Submit"                      ></Button>
            <TextBlock x:ConnectionId='2' Name="ORetrieve" Text="Name" Margin="10 0 10 0"></TextBlock>
        </StackPanel>

    </Grid>
</Page>


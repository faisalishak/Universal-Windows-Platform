        <ListView Name="ListMhs" 
                  ItemsSource="{Binding CollectionMhs}"
                  SelectionChanged="ListMhs_SelectionChanged">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Width="400" 
                          Height="50">
                        <StackPanel Orientation="Vertical" 
                                    Margin="5 5 0 5" 
                                    Background="#FFE6E6D6">
                            <TextBlock Text="{Binding nama}" 
                                       Margin="5 0 0 0" 
                                       FontWeight="Bold" 
                                       Foreground="#FF4D4A4A"></TextBlock>
                            <TextBlock Text="{Binding kelas}" 
                                       Margin="5 0 0 0" 
                                       FontWeight="Light"></TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" 
                                    Margin="0 0 20 0" 
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Right">
                            <SymbolIcon Tapped="SymbolIcon_Tapped" 
                                        Margin="0 0 10 0" 
                                        Symbol="Edit"/>
                            <SymbolIcon Tapped="SymbolIcon_Tapped_1" 
                                        Symbol="Delete"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <CommandBar VerticalAlignment="Bottom" IsOpen="True">
            <AppBarButton Name="btnAdd"  
                          Label="Add" 
                          Icon="Add"
                          Click="btnAdd_Click"/>
        </CommandBar>

    </Grid>
</Page>
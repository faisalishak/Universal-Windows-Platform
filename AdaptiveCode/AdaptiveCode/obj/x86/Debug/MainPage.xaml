<Page
    x:Class="AdaptiveCode.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AdaptiveCode"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.BottomAppBar>
        <CommandBar x:ConnectionId='1' x:Name = "commandBar" >
            <AppBarButton Icon = "Accept" Label = "appbarbutton"/>
            <AppBarButton Icon = "Cancel" Label = "appbarbutton"/>
        </CommandBar>
    </Page.BottomAppBar>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <RelativePanel>
            <StackPanel x:ConnectionId='2'  x:Name="hallo">
                <TextBlock Text="HaloDunia" ></TextBlock>
                <TextBlock Text="Ketikan nama anda"></TextBlock>
                <TextBox x:ConnectionId='10' x:Name="inputanNama"></TextBox>
                <Button x:ConnectionId='11' x:Name="submit"                     >Katakan "Halo"</Button>
                <TextBlock x:ConnectionId='12' x:Name="outputanNama"></TextBlock>
            </StackPanel>

            <StackPanel x:ConnectionId='3' RelativePanel.Below="hallo" x:Name="hai" HorizontalAlignment = "Center" VerticalAlignment = "Center" >
                <RadioButton x:ConnectionId='7' x:Name = "ShowAppBarRadioButton" Content = "Show AppBar"
                                    HorizontalAlignment = "Stretch" VerticalAlignment = "Stretch"
                                    IsChecked = "True"                                />
                <RadioButton x:ConnectionId='8' x:Name = "ShowOpaqueAppBarRadioButton" 
                                    Content = "Show Transparent AppBar" HorizontalAlignment = "Stretch"
                                    VerticalAlignment = "Stretch"                                />
                <RadioButton x:ConnectionId='9' x:Name = "HideAppBarRadioButton" Content = "Hide AppBar"
                                    HorizontalAlignment = "Stretch" VerticalAlignment = "Stretch" 
                                                                   />
            </StackPanel>

            <StackPanel x:ConnectionId='4' x:Name = "StatusBarControls" Orientation = "Vertical" 
                         RelativePanel.Below="hai" Visibility = "Visible">

                <CheckBox x:ConnectionId='5' x:Name = "StatusBarBackgroundCheckBox" 
                        Content = "Set StatusBar Background"
                                                                        
                                                                           />

                <CheckBox x:ConnectionId='6' x:Name = "StatusBarHiddenCheckBox" 
                        Content = "Set StatusBar Hidden"                                            
                                                                       />

            </StackPanel>
        </RelativePanel>

    </Grid>


    <VisualStateManager.VisualStateGroups>
        <VisualStateGroup>
            <VisualState>
                <VisualState.StateTriggers>
                    <local:DeviceFamilyTrigger DeviceFamily = "Desktop" />
                </VisualState.StateTriggers>
                <VisualState.Setters>
                    <Setter Target = "StatusBarControls.Visibility" 
                     Value = "Collapsed"/>
                </VisualState.Setters>
            </VisualState>
        </VisualStateGroup>
    </VisualStateManager.VisualStateGroups>

</Page>

